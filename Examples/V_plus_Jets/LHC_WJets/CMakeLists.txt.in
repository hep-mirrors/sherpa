project(MyJetCriterion LANGUAGES C CXX)
cmake_minimum_required(VERSION 3.11.0)
list(APPEND CMAKE_PREFIX_PATH "@CMAKE_INSTALL_PREFIX@")
set(CMAKE_MODULE_PATH ${PROJECT_SOURCE_DIR}/cmake/Modules ${CMAKE_MODULE_PATH} )
find_package(SHERPA-MC REQUIRED)
find_package(FastJet 3.2.0 REQUIRED)
add_library(MyJetCriterion SHARED My_JetCriterion.C)
amegic_handle_shared_library(MyJetCriterion MyJetCriterion)
target_link_libraries(MyJetCriterion PRIVATE FastJet::FastJet)
set(CMAKE_INSTALL_PREFIX ${PROJECT_SOURCE_DIR})
install(TARGETS MyJetCriterion DESTINATION ${CMAKE_INSTALL_PREFIX}/${CMAKE_INSTALL_LIBDIR})
